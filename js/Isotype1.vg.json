{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "config": {"view": {"stroke": ""}},
    "title": "Largest Tank Fleets",
    "width": 800,
    "height": 500,

       
      "data": {
        "url": "https://raw.githubusercontent.com/osir0002/3179/main/data/tanks_count.csv"
      },
  
      "transform": [
        {
          "filter": "datum.Tanks > 2830" 
        },
        {"calculate": "round(datum.Tanks/1000)", "as": "col"}
        ],

    

    "mark": {"type": "image"},
    "encoding": {
      "url":  {"value": "https://img.icons8.com/stickers/100/000000/tank.png"},
      "x": {"field": "col", "type": "quantitative", "axis": null},
      "y": {"field": "country", "type": "nominal", "sort": "-x", "title": null},

      "opacity": {"value": 1},
      "size": {"value": 200}, 
      
      "tooltip": [
       {"field": "country", "type": "nominal", "title": "Country"},
       {"field": "Tanks", "type": "quantitative", "title": "Tanks", "format": ","}
     ]
    }
  }
  