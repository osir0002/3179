{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "Global Military Power",
    "width": 1000,
    "height": 500,
    "projection": {"type": "equalEarth"},
    "data": {
      "url": "https://raw.githubusercontent.com/osir0002/3179/main/js/ne_110m_admin_0_countries.topojson",
      "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
    },

    "transform": [
    {
      "lookup": "properties.NAME_LONG",
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/osir0002/3179/main/data/global%20firepower%202022%20wide.csv"
          
        },
        "key": "country", 
        "fields": ["Active Personnel"]
      }
    }],


    
    "mark": {"type": "geoshape"},

    "encoding": {
      "color": {
        "field": "Active Personnel",
        "type": "quantitative",
        "scale": {"type": "linear"
        }
       }, 
      
       "tooltip": [
        {"field": "properties.NAME", "type": "nominal", "title": "Country"}  
      ]}



    
  }