{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "Global Military Power",
    "width": 1000,
    "height": 500,

    "params": [{
      "name": "category",
      "value": "Armored Vehicles",
      "bind": {
      "input": "select",
      "options": [
        "Attack Helicopters", "Defense Budget", "Navy Ships", "Paramilitary", "Submarines", "Tanks", "Total Aircraft Strength"
      ],
      "labels": ["Attack Helicopters", "Defense Budget", "Navy Ships", "Paramilitary", "Submarines", "Tanks", "Total Aircraft Strength"],
      "name": "Category: "
      }}],

    
    
    "projection": {"type": "equalEarth"}, 
    
    "layer": [
 


    {
    "data": {
      "url": "https://raw.githubusercontent.com/osir0002/3179/main/data/ne_110m.json",
      "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
    },
    
    "transform": [
    {
      "lookup": "properties.GEOUNIT",
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/osir0002/3179/main/data/global%20firepower%202022%20wide.csv"
        },
        "key": "country", 
        "fields": ["Armored Vehicles", "Attack Helicopters"]
      }
    }],

    "mark": {"type": "geoshape", "stroke": "lightgray"},

    "encoding": {
      "color": {
        "field": "Attack Helicopters",
        "type": "quantitative",
        "scale": {"type": "linear"
        }
       }, 
      
       "tooltip": [
        {"field": "properties.GEOUNIT", "type": "nominal", "title": "Country"},
        {"field": "Armored Vehicles", "type": "quantitative"}
      ]}},

      {"data": {
        "url": "https://raw.githubusercontent.com/osir0002/3179/main/data/ne_110m.json",
        "format": {"type": "topojson", "feature": "ne_110m_graticules_30"}
      },
      "mark": {"type": "geoshape", "fill": null, "stroke": "lightgray"}},
      {"data": {
        "url": "https://raw.githubusercontent.com/FIT3179/Vega-Lite/main/7_others/oceans.topojson",
        "format": {"type": "topojson", "feature": "oceans"}
      },
      "mark": {"type": "geoshape", "fill": "skyblue"}} 




    ] 


  }