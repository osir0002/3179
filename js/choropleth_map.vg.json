{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "Global Military Power",
    "width": 1000,
    "height": 500,



    "projection": {"type": "equalEarth"}, 
    
    "layer": [
    {
    "data": {
      "url": "https://raw.githubusercontent.com/osir0002/3179/main/data/ne_110m.json",
      "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
    }, 
    
    "transform": [
    {
      "lookup": "properties.GEOUNIT",
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/osir0002/3179/main/data/global%20firepower%202022%20wide.csv"
        },
        
        "key": "country",
         
        "fields": ["Active_Personnel", "Available_Manpower", "Fit-for-Service", "Paramilitary", "Reserve_Personnel", "Total_Population"]
      }
    },
    {"calculate": "100000*(datum.Fit-for-Service/datum.Total_Population)", "as": "Active Personnel per 100,000 population"}
    ],
  
    "mark": {"type": "geoshape", "stroke": "lightgray"},

    "encoding": {
      "color": {
        "field": "Active Personnel per 100,000 population",
        "type": "quantitative",
        "scale": {"type": "linear"},
        "legend": {"titleLimit": 300}
       }, 
      
       "tooltip": [
        {"field": "properties.GEOUNIT", "type": "nominal", "title": "Country"},
        {"field": "Total_Population", "type": "quantitative"}
      ]}},

      {"data": {
        "url": "https://raw.githubusercontent.com/osir0002/3179/main/data/ne_110m.json",
        "format": {"type": "topojson", "feature": "ne_110m_graticules_30"}
      },
      "mark": {"type": "geoshape", "fill": null, "stroke": "lightgray"}},
      {"data": {
        "url": "https://raw.githubusercontent.com/FIT3179/Vega-Lite/main/7_others/oceans.topojson",
        "format": {"type": "topojson", "feature": "oceans"}
      },
      "mark": {"type": "geoshape", "fill": "skyblue"}} 




    ] 


  }