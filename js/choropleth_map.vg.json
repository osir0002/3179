{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "Global Military Power",
    "width": 1000,
    "height": 500,
    "projection": {"type": "equalEarth"},
    
    "layer": [

      
    {
    "data": {
      "url": "https://raw.githubusercontent.com/osir0002/3179/main/data/ne_110m.json",
      "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
    },
    
    
    "transform": [
    {
      "lookup": "properties.GEOUNIT",
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/osir0002/3179/main/data/global%20firepower%202022%20wide.csv"
        },
        "key": "country", 
        "fields": ["Active Personnel"]
      }
    }],

    "mark": {"type": "geoshape"},

    "encoding": {
      "color": {
        "field": "Active Personnel",
        "type": "quantitative",
        "scale": {"type": "linear"
        }
       }, 
      
       "tooltip": [
        {"field": "properties.NAME_LONG", "type": "nominal", "title": "Country"},
        {"field": "Active Personnel", "type": "quantitative"}
      ]}}]


  }