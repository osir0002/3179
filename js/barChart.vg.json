{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "Military Personnel of Top Countries",
    "width": 1000,
    "height": 500,
    

    "data": {
      "url": "https://raw.githubusercontent.com/osir0002/3179/main/data/global%20firepower%202022%20wide.csv"
    },
    "transform": [
      {
        "window": [{
          "op": "rank",
          "as": "rank"
        }],
        "sort":[{"field": "Total Population", "order": "descending"}]
      },
      {
        "filter": "datum.rank <=30"
      }
    ],
    





    "mark": "bar",
    "width": {"step": 20},

    "encoding": {
      "x": {
        "field": "country",
        "type": "nominal",
        "title": "country"

      },
      "y": {
        "field": "Total Population",
        "aggregate": "sum",
        "type": "quantitative",
        "title": "number of people",
        "stack": null
      },

      
       "tooltip": [
        {"field": "country", "type": "nominal", "title": "Country"},
        {"field": "Active Personnel", "type": "quantitative"},
        {"field": "Available Manpower", "type": "quantitative"},
        {"field": "Fit-for-Service", "type": "quantitative"},
        {"field": "Labor Force", "type": "quantitative"},
        {"field": "Total Population", "type": "quantitative"}
      ]}


  }