{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "Defence Spending",
    "width": 1000,
    "height": 500,
    
    "params": [{
      "name": "Min_Budget",
      "value": 2000000000,
      "bind": {
      "input": "range",
      
      "min": 2000000000,
      "max": 40000000000,
      "step": 2000000000,
      "name": "Min Annual Defence Budget: "
      }}],        


    "data": {
      "url": "https://raw.githubusercontent.com/osir0002/3179/main/data/global%20firepower%202022%20wide.csv"
    },

    "transform": [
      {
        "filter": "datum.Defense_Budget > Min_Budget" 
      }
    ],


    "mark": "bar",
    "width": {"step": 20},

    "encoding": {
      "x": {
        "field": "country",
        "type": "nominal",
        "title": "country",
        "sort": "-y"

      },
      "y": {
        "field": "Defense_Budget",
        "aggregate": "sum",
        "type": "quantitative",
        "title": "Defence Budget ($USD)",
        "stack": null

      },

      
       "tooltip": [
        {"field": "country", "type": "nominal", "title": "Country"},
        {"field": "Defense_Budget", "type": "quantitative", "title": "Defence Budget"}

      ]}


  }