{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "Top Defence Spending Nations",
    "width": 1000,
    "height": 500,
    

    "data": {
      "url": "https://raw.githubusercontent.com/osir0002/3179/main/data/global%20firepower%202022%20wide.csv"
    },

    "transform": [
      {
        "filter": "datum.Defense_Budget > 40000000000"
      }
    ],


    "mark": "bar",
    "width": {"step": 20},

    "encoding": {
      "x": {
        "field": "country",
        "type": "nominal",
        "title": "country",
        "sort": "-y"

      },
      "y": {
        "field": "Defense_Budget",
        "aggregate": "sum",
        "type": "quantitative",
        "title": "Defence Budget ($USD)",
        "stack": null

      },

      
       "tooltip": [
        {"field": "country", "type": "nominal", "title": "Country"},
        {"field": "Defense_Budget", "type": "quantitative", "title": "Defence Budget"}

      ]}


  }