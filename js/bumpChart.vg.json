{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "config": {"view": {"stroke": ""}},
    "title": "Military Powers ranked according to Global Firepower (2007 - 2022)",
    "width": "container",
    "height": 500,

    "data": {
        "url": "https://raw.githubusercontent.com/osir0002/3179/main/data/rankings2.csv"
      }, 

      "transform": [
        {
          "filter": "datum.Rank <= 10"
        }
      ],

      "mark": {"type": "image", "width": 50, "height": 50},
      "encoding": {
        "x": {"field": "Year", "type": "ordinal", "title": null, "axis": {"orient": "top", "labelAngle": 0}, "sort": "ascending"},
        "y": {"field": "Rank", "type": "quantitative", "title": null, "sort": "descending"},
        "url" : {"field": "Img", "type": "nominal"},
        
        "tooltip": [
            {"field": "Country", "type": "nominal", "title": "Country"},
            {"field": "Rank", "type": "ordinal", "title": "Rank"},
            {"field": "Year", "type": "ordinal", "title": "Year"}
          ]
              
      }

  }