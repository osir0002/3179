{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "Military Personnel of Top Countries",
    "width": 1000,
    "height": 500,
    

    "data": {
      "url": "https://raw.githubusercontent.com/osir0002/3179/main/data/global%20firepower%202022%20wide.csv"
    },

    "width": {"step": 17},

    "mark": {"type": "bar"},

    "encoding": {
      "x": {
        "field": "country",
        "type": "nominal",
        "title": "country"
      },
      "y": {
        "aggregate": "count",
        "type": "quantitative",
        "title": "number of people"
      },
      "color": {
        "field": "Population",
        "type": "nominal",
        "scale": {"type": "linear"
        }
       }, 
      
       "tooltip": [
        {"field": "country", "type": "nominal", "title": "Country"},
        {"field": "Active Personnel", "type": "quantitative"},
        {"field": "Fit-for-Service", "type": "quantitative"},
        {"field": "Labor Force", "type": "quantitative"},
        {"field": "Total Population", "type": "quantitative"}
      ]}


  }